{
  "compilerOptions": {
    /* ðŸ”¥ Ambiente */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",

    /* ðŸš€ OrganizaÃ§Ã£o do projeto */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ðŸ”‘ Interoperabilidade */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* ðŸ§  Qualidade e seguranÃ§a */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* âš¡ Performance */
    "resolveJsonModule": true,
    "sourceMap": true,

    /* ðŸ”’ Node */
    "types": ["node"]
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}